@model IEnumerable<MilestoneProject.Models.Belt>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.weightCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.owner)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.weightCategory.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.owner.name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.beltId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.beltId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.beltId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
